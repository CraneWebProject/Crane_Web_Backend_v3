pipeline {
    agent any

    environment {
        SERVICE_NAME = 'eureka-server'
        IMAGE_TAG = "eureka-server:latest"
        LOCAL_PORT = "8761"
        EUREKA_URL = credentials('EUREKA_URL') // âœ… í™˜ê²½ ë³€ìˆ˜ ì„¤ì •
    }

    stages {
        stage('Check Environment Variables') {
            steps {
                script {
                    echo "âœ… Jenkins í™˜ê²½ ë³€ìˆ˜ í™•ì¸..."
                    echo "ğŸ” EUREKA_URL: $EUREKA_URL"
                }
            }
        }

        stage('Check Changes') {
            steps {
                script {
                    def changes = sh(script: "git diff --name-only HEAD^", returnStdout: true).trim()
                    def serviceChanged = changes.split('\n').any { it.startsWith('eureka-server/') }

                    if (!serviceChanged) {
                        currentBuild.result = 'NOT_BUILT'
                        error('No changes in eureka-server directory, skipping build')
                    }
                    echo "âœ… eureka-server ë³€ê²½ ì‚¬í•­ ê°ì§€ë¨. ë¹Œë“œë¥¼ ì§„í–‰í•©ë‹ˆë‹¤."
                }
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'msa',
                    url: 'https://github.com/CraneWebProject/Crane_Web_Backend_v3'

                script {
                    def gitCommit = sh(script: 'git rev-parse HEAD', returnStdout: true).trim()
                    echo "âœ… í˜„ì¬ ë¹Œë“œí•˜ëŠ” ì»¤ë°‹: ${gitCommit}"
                }
            }
        }

        stage('Build') {
            steps {
                dir('eureka-server') {
                    sh '''
                        chmod +x gradlew
                        ./gradlew clean build -x test
                    '''
                }
            }
            post {
                success {
                    echo "âœ… Build ë‹¨ê³„ ì™„ë£Œ"
                }
                failure {
                    error "âŒ Build ë‹¨ê³„ ì‹¤íŒ¨"
                }
            }
        }

        stage('Docker Build & Run') {
            steps {
                script {
                    sh '''
                    echo "ğŸ” í˜„ì¬ EUREKA_URL ê°’: $EUREKA_URL"

                    docker build -t $IMAGE_TAG \
                        --build-arg EUREKA_URL=$EUREKA_URL \
                        eureka-server/

                    # ê¸°ì¡´ ì»¨í…Œì´ë„ˆ ì¢…ë£Œ í›„ ì‚­ì œ
                    docker stop $SERVICE_NAME || true
                    docker rm $SERVICE_NAME || true

                    # ìƒˆ ì»¨í…Œì´ë„ˆ ì‹¤í–‰
                    docker run -d --name $SERVICE_NAME \
                        -e EUREKA_URL=$EUREKA_URL \
                        -p $LOCAL_PORT:8761 $IMAGE_TAG
                    '''
                }
            }
        }
    }

    post {
        success {
            echo """
            ===========================================
            âœ… Pipeline Successfully Completed
            Service: ${SERVICE_NAME}
            Image: ${IMAGE_TAG}
            Port: ${LOCAL_PORT}
            ===========================================
            """
        }
        failure {
            echo """
            ===========================================
            âŒ Pipeline Failed
            Service: ${SERVICE_NAME}
            Stage: ${currentBuild.result}
            ===========================================
            """
        }
        always {
            cleanWs()
        }
    }
}
