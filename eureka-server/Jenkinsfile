pipeline {
    agent any

    environment {
        SERVICE_NAME = 'eureka-server'
        IMAGE_TAG = "eureka-server:latest" // 로컬 이미지 태그
        LOCAL_PORT = "8761" // 실행할 포트
    }

    stages {
        stage('Prepare Config') {
            steps {
                withCredentials([
                    string(credentialsId: 'EUREKA_URL', variable: 'EUREKA_URL'),
                ]) {
                    script {
                        echo "Preparing configuration values..."

                        echo "✅ 환경 변수 확인 완료."
                    }
                }
            }
        }

        stage('Check Changes') {
            steps {
                script {
                    def changes = sh(script: "git diff --name-only HEAD^", returnStdout: true).trim()
                    def serviceChanged = changes.split('\n').any { it.startsWith('eureka-server/') }

                    if (!serviceChanged) {
                        currentBuild.result = 'NOT_BUILT'
                        error('No changes in eureka-server directory, skipping build')
                    }
                    echo "✅ eureka-server 변경 사항 감지됨. 빌드를 진행합니다."
                }
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'msa',
                    url: 'https://github.com/CraneWebProject/Crane_Web_Backend_v3'

                script {
                    def gitCommit = sh(script: 'git rev-parse HEAD', returnStdout: true).trim()
                    echo "✅ 현재 빌드하는 커밋: ${gitCommit}"
                }
            }
        }

        stage('Build') {
            steps {
                dir('eureka-server') {
                    sh '''
                        chmod +x gradlew
                        ./gradlew clean build -x test
                    '''
                }
            }
            post {
                success {
                    echo "✅ Build 단계 완료"
                }
                failure {
                    error "❌ Build 단계 실패"
                }
            }
        }

        stage('Docker Build & Run') {
            steps {
                script {
                    sh '''
                    docker build -t $IMAGE_TAG \
                        --build-arg EUREKA_URL=$EUREKA_URL \
                        eureka-server/

                    # 기존 컨테이너 종료 후 삭제
                    docker stop $SERVICE_NAME || true
                    docker rm $SERVICE_NAME || true

                    # 새 컨테이너 실행
                    docker run -d --name $SERVICE_NAME \
                        -e EUREKA_URL=$EUREKA_URL \
                        -p $LOCAL_PORT:8761 $IMAGE_TAG
                    '''
                }
            }
        }
    }

    post {
        success {
            echo """
            ===========================================
            ✅ Pipeline Successfully Completed
            Service: ${SERVICE_NAME}
            Image: ${IMAGE_TAG}
            Port: ${LOCAL_PORT}
            ===========================================
            """
        }
        failure {
            echo """
            ===========================================
            ❌ Pipeline Failed
            Service: ${SERVICE_NAME}
            Stage: ${currentBuild.result}
            ===========================================
            """
        }
        always {
            cleanWs()
        }
    }
}